<!DOCTYPE html>
<html>
    <head>
        <%- include('./components/htmlHead'); %>
        <link rel='stylesheet' href='/css/past-order.css' />
    </head>

    <body>
        <header>
            <%- include('./components/header'); %>
        </header>

        <div class="spacing"></div>

        <div class="content">
            <div class="card box">
                <h1>Past Orders</h1>
                <hr>
                <% if (data.length == 0) { %>
                    <p>No past orders.</p>
                <% } else { %>
                    <table>
                        <tr>
                            <th>Pet Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Care Taker</th>
                            <th>Daily Price</th>
                            <th>Paid</th>
                            <th>Payment Mode</th>
                            <th>Transfer Method</th>
                            <th>Rating</th>
                            <th>Review</th>
                        </tr>
                        <% for(var i=0; i<data.length; i++) { %>
                            <tr>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].start_day %>/<%= data[i].start_month %>/<%= data[i].start_year %></td>
                                <td><%= data[i].end_day %>/<%= data[i].end_month %>/<%= data[i].end_year %></td>
                                <td><%= data[i].ctuname %></td>
                                <td>$<%= parseFloat(data[i].daily_price).toFixed(2) %></td>
                                <td><%= data[i].has_paid %></td>
                                <td><%= data[i].payment_mode %></td>
                                <td><%= data[i].transfer_method %></td>
                                <td><%= data[i].rating %></td>
                                <td><%= data[i].review %></td>
                                <td style="border:transparent;">
                                    <% if (data[i].is_completed && data[i].rating == null) { %>
                                        <button class="button" onclick="window.location.href='/po/<%= encodeURIComponent(data[i].name)%>/<%= encodeURIComponent(data[i].end_day)%>/<%= encodeURIComponent(data[i].end_month)%>/<%= encodeURIComponent(data[i].end_year)%>/<%= encodeURIComponent(data[i].ctuname)%>/review'">Rate & Review</button>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    </table>
                <% } %>
            </div>
        </div>

        <div class="spacing"></div>
        <footer>
            <%- include('./components/footer'); %>
        </footer>
    </body>
</html>
