<!DOCTYPE html>
<html>
    <head>
        <%- include('./components/htmlHead'); %>
    </head>

    <body>
        
        <!-- <%- include('./components/backToTopBtn'); %> -->
        
        <header>
            <%- include('./components/header'); %>
        </header>

        <!-- Content here -->
        <body>
            <h1>Profile</h1>
            <p>Username: <%= data[0].username %></p>
            <p>Password: <%= data[0].password %></p>
            <p>Name: <%= data[0].name %></p>
            <p>Phone number: <%= data[0].phone_number %></p>
            <p>Area: <%= data[0].area %></p>
            <% if (!data[0].credit_card) { %>
                <p>Credit card number: -</p>
            <% } else { %>
                <p>Credit card number: <%= data[0].credit_card %></p>
            <% } %>

            <h1>Pet Information</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Pet name</th>
                        <th scope="col">Type</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<dataP.length; i++) { %>
                    <tr>
                        <td><%= dataP[i].name %></td>
                        <td><%= dataP[i].type %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

            <br>
            <h3><p><a href="/edit_profile" class="button">Edit Profile</a></p></h3>


        <footer>
            <%- include('./components/footer'); %>
        </footer>
    </body>
</html>
