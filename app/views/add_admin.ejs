<!DOCTYPE html>
<html>
<head>
    <%- include('./components/htmlHead'); %>
    <link rel='stylesheet' href='/css/form.css' />
    <script src="js/togglePassword.js"></script>
    <script src="js/userDataValidation.js"></script>
</head>

<body>

    <header>
        <%- include('./components/header'); %>
    </header>

    <div class="content">
        <div class="spacing"></div>

            <form id="addAdminForm" method="POST" action="/addadmin">
                <h3 id="title">Add New Admin</h3>
                <div class="input-group">
                    <p>Username: </p>
                    <input type="text" id="username" name="username" placeholder="Username" required>
                </div>
                <div class="input-group">
                    <p>Password: </p>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <div>
                        <input id="show-pw" type="checkbox" onclick="toggleMask()">
                        <label for="show-pw">Show Password</label>
                    </div>
                </div>
                <hr>
                <div class="input-group">
                    <p>Name: </p>
                    <input type="text" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="input-group">
                    <p>Phone number: </p>
                    <input type="text" id="phone" name="phone" placeholder="Phone number" required>
                </div>
                <div class="input-group">
                    <p>Area: </p>
                    <input type="text" id="area" name="area" placeholder="Area" required>
                </div>
                <div class="input-group">
                    <p>Position in company: </p>
                    <input type="text" id="position" name="position" placeholder="Position" required>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

    <div class="spacing"></div>

    <script>
        window.addEventListener('load', function() {
            var forms = [document.getElementById('addAdminForm')];
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', checkAD, false);
            });
        }, false);

        if ("<%= msg%>" != "") {
            alert('<%= msg%>');
        }
    </script>

    <footer>
        <%- include('./components/footer'); %>
    </footer>
</body>
</html>
