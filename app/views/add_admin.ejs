<!DOCTYPE html>
<html>
<head>
    <%- include('./components/htmlHead'); %>
    <script src="js/editProfileScript.js"></script>
</head>

<body>

<!-- <%- include('./components/backToTopBtn'); %> -->

<header>
    <%- include('./components/header'); %>
</header>

<!-- Content here -->
<body>
<h1 id="title"><%= title %></h1>
<div class="content">
    <div>
        <form id="addAdminForm" method="POST" action="/addadmin">
            <div class="aligner">
                <div id="usernameDiv">
                    <p>Username: </p>
                    <input type="text" id="username" name="username" placeholder="Userame" required>
                </div>
                <div id="nameDiv">
                    <p>Name: </p>
                    <input type="text" id="name" name="name" placeholder="Name" required>
                </div>
                <div id="passwordDiv">
                    <p>Password: </p>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <input type="checkbox" onclick="myFunction()">Show Password
                    <script>
                        function myFunction() {
                            var x = document.getElementById("password");
                            if (x.type === "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }
                    </script>
                </div>
                <div id="phoneDiv">
                    <p>Phone number: </p>
                    <input type="text" id="phone" name="phone" placeholder="Phone number" required>
                </div>
                <div id="areaDiv">
                    <p>Area: </p>
                    <input type="text" id="area" name="area" placeholder="Area" required>
                </div>
                <div id="positionDiv">
                    <p>Position in company: </p>
                    <input type="text" id="position" name="position" placeholder="Position" required>
                </div>
            </div>
            <div class="aligner">
                <p></p>
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</div>

<script>
    (function() {
        window.addEventListener('load', function() {
            var forms = [document.getElementById('addAdminForm')];
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', checkAdd, false);
            });
        }, false);
    })();

</script>

<footer>
    <%- include('./components/footer'); %>
</footer>
</body>
</html>
