        <header>
            <%- include('./components/header'); %>
        </header>

        <!-- Content here -->
        <h1><%= title %> For <%= type %></h1>
        <form id="setpriceForm" method="POST" action="/ct/<%= type %>/set">
          <div class="form-group">
            <label for="price">Price: </label>
